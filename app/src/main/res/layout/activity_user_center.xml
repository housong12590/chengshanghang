<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.jmm.csg.widget.TitleView
        android:id="@+id/titleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:left_image="@drawable/icon_back"
        app:title_text="@string/user_info" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:paddingBottom="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:orientation="vertical"
                android:padding="5dp">

                <com.jmm.csg.widget.CircleImageView
                    android:id="@+id/iv_avatar"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="centerCrop" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_change_avatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/shape_gray_bg"
                android:drawableLeft="@drawable/icon_edit2"
                android:drawablePadding="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="5dp"
                android:text="修改头像"
                android:textColor="@color/gray_96"
                android:textSize="@dimen/text_14" />

            <View
                style="@style/divider_h"
                android:layout_marginTop="5dp"
                android:focusable="true"
                android:focusableInTouchMode="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="2"
                    android:text="客户经理姓名"
                    android:textColor="@color/btn_nor"
                    android:textSize="@dimen/text_14" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:maxLength="20"
                    android:paddingLeft="5dp"
                    android:paddingRight="25dp"
                    android:singleLine="true"
                    android:textColorHint="@color/gray_96"
                    android:textSize="@dimen/text_14"
                    tools:text="sdfs" />
            </LinearLayout>

            <View style="@style/divider_h" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="2"
                    android:text="手机号"
                    android:textColor="@color/btn_nor"
                    android:textSize="@dimen/text_14" />

                <TextView
                    android:id="@+id/tv_phone_num"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:maxLength="11"
                    android:paddingLeft="5dp"
                    android:paddingRight="12dp"
                    android:textColorHint="@color/gray_96"
                    android:textSize="@dimen/text_14"
                    tools:text="13776601064" />
            </LinearLayout>
            <!--android:drawableRight="@drawable/icon_more_gray"-->


            <View style="@style/divider_h" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="2"
                    android:text="工号"
                    android:textColor="@color/btn_nor"
                    android:textSize="@dimen/text_14" />

                <TextView
                    android:id="@+id/tv_job_Num"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:maxLength="10"
                    android:paddingLeft="5dp"
                    android:paddingRight="25dp"
                    android:textColorHint="@color/gray_96"
                    android:textSize="@dimen/text_14" />
            </LinearLayout>


            <View style="@style/divider_h" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="2"
                    android:text="所属银行"
                    android:textColor="@color/btn_nor"
                    android:textSize="@dimen/text_14" />

                <TextView
                    android:id="@+id/tv_bank"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:drawablePadding="15dp"
                    android:gravity="center_vertical"
                    android:paddingRight="25dp"
                    android:textSize="@dimen/text_14"
                    tools:text="中国银行" />

            </LinearLayout>


            <View style="@style/divider_h" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="2"
                    android:text="所属区域"
                    android:textColor="@color/btn_nor"
                    android:textSize="@dimen/text_14" />

                <TextView
                    android:id="@+id/tv_area"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:gravity="center_vertical"
                    android:paddingRight="25dp"
                    android:textSize="@dimen/text_14" />

            </LinearLayout>


            <View style="@style/divider_h" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="2"
                    android:text="所属支行"
                    android:textColor="@color/btn_nor"
                    android:textSize="@dimen/text_14" />

                <TextView
                    android:id="@+id/tv_branch"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:gravity="center_vertical"
                    android:paddingRight="25dp"
                    android:textSize="@dimen/text_14" />

            </LinearLayout>


            <View style="@style/divider_h" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/iv_card_front"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="center" />

                <ImageView
                    android:id="@+id/iv_card_back"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="80dp"
                    android:scaleType="center" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_commit"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_margin="25dp"
                android:background="@drawable/selector_btn_bg"
                android:gravity="center"
                android:text="重新提交审核"
                android:textColor="@color/white"
                android:textSize="@dimen/text_14"
                android:visibility="gone" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>