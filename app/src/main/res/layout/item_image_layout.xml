<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/main_frame_layout"
                android:layout_width="match_parent"
                android:layout_height="100dp">

    <ImageView
        android:id="@+id/iv_picture"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        android:layout_margin="2dp"
        android:src="@drawable/defaultpic"/>

    <ImageView
        android:id="@+id/iv_forgound"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/iv_picture"
        android:layout_alignLeft="@+id/iv_picture"
        android:layout_alignRight="@+id/iv_picture"
        android:layout_alignTop="@+id/iv_picture"
        android:background="@color/half_trans_bg"
        android:contentDescription="@null"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_select"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_alignRight="@+id/iv_picture"
        android:layout_alignTop="@+id/iv_picture"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/photo_select_oval_selector"
        android:enabled="true"
        android:gravity="center"
        android:textSize="12sp"
        android:text="12"
        android:textColor="@android:color/white"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/tv_select_v"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignRight="@+id/iv_picture"
        android:layout_alignTop="@+id/iv_picture"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:visibility="visible"/>

</RelativeLayout>