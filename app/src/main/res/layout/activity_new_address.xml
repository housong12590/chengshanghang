<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="right"
    android:orientation="vertical">

    <com.jmm.csg.widget.TitleView
        android:id="@+id/titleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:left_image="@drawable/icon_back"
        app:title_text="新增收货地址"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:text="收货人"
            android:textColor="@color/black"
            android:textSize="@dimen/text_14"/>

        <com.jmm.csg.widget.ContainsEmojiEditText
            android:id="@+id/et_consignee"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="收货人姓名"
            android:maxLength="20"
            android:paddingLeft="5dp"
            android:textColor="@color/black"
            android:textColorHint="@color/gray_96"
            android:textSize="@dimen/text_14"/>

    </LinearLayout>

    <View style="@style/divider_h"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:text="联系电话"
            android:textColor="@color/black"
            android:textSize="@dimen/text_14"/>

        <EditText
            android:id="@+id/et_phone_num"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="收货人手机号码"
            android:inputType="number"
            android:maxLength="11"
            android:paddingLeft="5dp"
            android:textColor="@color/black"
            android:textColorHint="@color/gray_96"
            android:textSize="@dimen/text_14"/>

    </LinearLayout>

    <View style="@style/divider_h"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:text="所在地区"
            android:textColor="@color/black"
            android:textSize="@dimen/text_14"/>

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@null"
            android:drawableRight="@drawable/icon_more_gray"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:paddingRight="12dp"
            android:text="请选择收货地区"
            android:textColor="@color/black"
            android:textColorHint="@color/gray_96"
            android:textSize="@dimen/text_14"/>

    </LinearLayout>

    <View style="@style/divider_h"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:text="详细地址"
            android:textColor="@color/black"
            android:textSize="@dimen/text_14"/>

        <com.jmm.csg.widget.ContainsEmojiEditText
            android:id="@+id/et_detail_address"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@null"
            android:hint="街道小区门牌号"
            android:maxLength="200"
            android:paddingLeft="5dp"
            android:paddingRight="12dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/gray_96"
            android:textSize="@dimen/text_14"/>

    </LinearLayout>


    <View style="@style/divider_h"/>

    <CheckBox
        android:id="@+id/cb_primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="25dp"
        android:layout_marginTop="20dp"
        android:button="@drawable/selector_check_bg"
        android:paddingLeft="5dp"
        android:text="设为默认地址"
        android:textColor="@color/gray_66"
        android:textSize="@dimen/text_14"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_save"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/selector_btn_bg"
        android:gravity="center"
        android:text="保存并使用"
        android:textColor="@color/white"
        android:textSize="@dimen/text_16"/>

</LinearLayout>
