<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/contentView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/rb_zhiFuBao"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginLeft="30dp"
                android:button="@drawable/selector_check_bg"
                android:gravity="center_vertical"
                android:paddingLeft="25dp"
                android:text="支付宝"
                android:textColor="@color/black"
                android:textSize="@dimen/text_16"
                android:visibility="gone"/>

            <View style="@style/divider_h"/>

            <RadioButton
                android:id="@+id/rb_weiXin"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:background="@android:color/transparent"
                android:button="@null"
                android:drawableLeft="@drawable/icon_wepay"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/selector_check_bg"
                android:gravity="center_vertical"
                android:paddingLeft="25dp"
                android:paddingRight="30dp"
                android:text="微信支付"
                android:textColor="@color/black"
                android:textSize="@dimen/text_16"/>

            <View style="@style/divider_h"/>

            <RadioButton
                android:id="@+id/rb_yinLian"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:background="@android:color/transparent"
                android:button="@null"
                android:drawableLeft="@drawable/icon_unionpay"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/selector_check_bg"
                android:gravity="center_vertical"
                android:paddingLeft="25dp"
                android:paddingRight="30dp"
                android:text="银联支付"
                android:textColor="@color/black"
                android:textSize="@dimen/text_16"/>

            <View
                style="@style/divider_h"/>
        </RadioGroup>

        <TextView
            android:id="@+id/tv_pay"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_margin="20dp"
            android:background="@drawable/selector_btn_bg"
            android:gravity="center"
            android:text="立即支付"
            android:textColor="@color/white"
            android:textSize="@dimen/text_16"/>

    </LinearLayout>

    <com.jmm.csg.widget.TitleView
        android:id="@+id/titleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:left_image="@drawable/icon_back"
        app:title_text="选择支付方式"/>

</LinearLayout>
