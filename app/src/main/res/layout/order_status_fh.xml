        android:textColor="@color/gray_66"/>

    <TextView
        android:id="@+id/tv_logistics"
        style="@style/btn_style"
        android:layout_marginRight="15dp"
        android:background="@drawable/shape_btn_white_bg"
        android:text="申请退款"
