<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.jmm.csg.widget.TitleView
        android:id="@+id/titleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title_text="实名认证"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <!--<ImageView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="45dp"-->
            <!--android:focusable="true"-->
            <!--android:focusableInTouchMode="true"-->
            <!--android:padding="7dp"-->
            <!--android:src="@drawable/icon_bank"/>-->

            <!--<View style="@style/divider_h"/>-->


            <ImageView
                android:id="@+id/iv_avatar"
                android:layout_width="95dp"
                android:layout_height="120dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/icon_camera"/>

            <TextView
                android:id="@+id/tv_job_Num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="工号:125646"
                android:textColor="@color/black"
                android:textSize="@dimen/text_14"
                android:visibility="gone"/>

            <View
                style="@style/divider_h"
                android:layout_marginTop="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="2"
                    android:text="姓名"
                    android:textColor="@color/btn_nor"
                    android:textSize="@dimen/text_16" />

                <com.jmm.csg.widget.ContainsEmojiEditText
                    android:id="@+id/et_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:background="@null"
                    android:hint="请输入姓名"
                    android:maxLength="10"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:textColor="@color/gray_96"
                    android:textColorHint="@color/divider"
                    android:textSize="@dimen/text_16" />

            </LinearLayout>

            <View style="@style/divider_h"/>

            <LinearLayout
                android:id="@+id/ll_bank"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="2"
                    android:text="所属银行"
                    android:textColor="@color/btn_nor"
                    android:textSize="@dimen/text_16" />

                <TextView
                    android:id="@+id/tv_bank"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:drawablePadding="15dp"
                    android:drawableRight="@drawable/icon_more_bottom_gray"
                    android:gravity="right|center_vertical"
                    android:hint="请选择"
                    android:paddingLeft="5dp"
                    android:paddingRight="12dp"
                    android:textColor="@color/gray_96"
                    android:textSize="@dimen/text_16"/>

            </LinearLayout>

            <View style="@style/divider_h"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="2"
                    android:text="所属区域"
                    android:textColor="@color/btn_nor"
                    android:textSize="@dimen/text_16"/>

                <TextView
                    android:id="@+id/tv_area"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:drawablePadding="15dp"
                    android:drawableRight="@drawable/icon_more_bottom_gray"
                    android:gravity="right|center_vertical"
                    android:hint="请选择"
                    android:paddingLeft="5dp"
                    android:paddingRight="12dp"
                    android:singleLine="true"
                    android:textColor="@color/gray_96"
                    android:textSize="@dimen/text_16"/>

            </LinearLayout>

            <View style="@style/divider_h"/>

            <LinearLayout
                android:id="@+id/ll_branch"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="2"
                    android:text="所属支行"
                    android:textColor="@color/btn_nor"
                    android:textSize="@dimen/text_16"/>

                <TextView
                    android:id="@+id/tv_branch"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:drawablePadding="15dp"
                    android:drawableRight="@drawable/icon_more_bottom_gray"
                    android:gravity="right|center_vertical"
                    android:hint="请选择"
                    android:paddingLeft="5dp"
                    android:paddingRight="12dp"
                    android:singleLine="true"
                    android:textColor="@color/gray_96"
                    android:textSize="@dimen/text_16"/>

            </LinearLayout>

            <View style="@style/divider_h"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="2"
                    android:text="工号"
                    android:textColor="@color/btn_nor"
                    android:textSize="@dimen/text_16"/>

                <EditText
                    android:id="@+id/et_job_Num"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:background="@null"
                    android:hint="请输入工号"
                    android:inputType="phone"
                    android:digits="0123456789QWERTYUIOPASDFGHJKLZXCVBNMqwertyuiopasdfghjklzxcvbnm"
                    android:maxLength="30"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:textColor="@color/gray_96"
                    android:textColorHint="@color/divider"
                    android:textSize="@dimen/text_16"/>

            </LinearLayout>

            <View style="@style/divider_h"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="2"
                    android:text="联系电话"
                    android:textColor="@color/btn_nor"
                    android:textSize="@dimen/text_16"/>

                <EditText
                    android:id="@+id/et_phone_num"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:background="@null"
                    android:hint="请输入手机号"
                    android:inputType="number"
                    android:maxLength="11"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:textColor="@color/gray_96"
                    android:textColorHint="@color/divider"
                    android:textSize="@dimen/text_16"/>

            </LinearLayout>

            <View style="@style/divider_h"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="2"
                    android:text="身份证件"
                    android:textColor="@color/btn_nor"
                    android:textSize="@dimen/text_16"/>

                <EditText
                    android:id="@+id/et_card_num"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:background="@null"
                    android:hint="请输入身份证号码"
                    android:maxLength="18"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:textColor="@color/gray_96"
                    android:textColorHint="@color/divider"
                    android:textSize="@dimen/text_16"/>

            </LinearLayout>

            <View style="@style/divider_h"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_card_front"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:src="@drawable/icon_card_front"
                    android:scaleType="centerCrop"/>

                <!--<LinearLayout-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginTop="10dp"-->
                <!--android:gravity="center_horizontal"-->
                <!--android:orientation="vertical"-->
                <!--android:padding="5dp">-->

                <!---->

                <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginTop="5dp"-->
                <!--android:text="身份证正面"-->
                <!--android:textColor="@color/gray_a1"-->
                <!--android:textSize="@dimen/text_16"/>-->

                <!--</LinearLayout>-->

                <ImageView
                    android:id="@+id/iv_card_back"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:layout_marginLeft="30dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/icon_card_back"/>


                <!--<LinearLayout-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginLeft="30dp"-->
                <!--android:layout_marginTop="10dp"-->
                <!--android:gravity="center_horizontal"-->
                <!--android:orientation="vertical"-->
                <!--android:padding="5dp">-->

                <!---->
                <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginTop="5dp"-->
                <!--android:text="身份证反面"-->
                <!--android:textColor="@color/gray_a1"-->
                <!--android:textSize="@dimen/text_16"/>-->

                <!--</LinearLayout>-->

            </LinearLayout>


            <TextView
                android:id="@+id/tv_commit"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_margin="25dp"
                android:background="@drawable/selector_btn_bg"
                android:gravity="center"
                android:text="提交"
                android:textColor="@color/white"
                android:textSize="@dimen/text_16"/>
        </LinearLayout>

    </ScrollView>

</LinearLayout>
