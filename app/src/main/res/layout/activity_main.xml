<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/layout_bg"
              android:orientation="vertical">

    <!--<com.jmm.csg.widget.TitleView-->
        <!--android:id="@+id/titleView"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--app:title_text="个人中心"/>-->

    <com.jmm.csg.widget.NoScrollViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <View style="@style/divider_h"/>

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <com.jmm.csg.widget.CenterRadioButton
            android:id="@+id/rb_commodity"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:button="@null"
            android:drawableLeft="@drawable/selector_tab_product"
            android:drawablePadding="5dp"
            android:text="@string/commodity"
            android:textColor="@color/tab_text_color"
            android:textSize="@dimen/text_16"/>

        <View style="@style/divider_v"/>

        <com.jmm.csg.widget.CenterRadioButton
            android:id="@+id/rb_message"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:button="@null"
            android:drawableLeft="@drawable/selector_tab_message"
            android:drawablePadding="5dp"
            android:text="@string/message"
            android:textColor="@color/tab_text_color"
            android:textSize="@dimen/text_16"
            android:visibility="gone"/>

        <View
            style="@style/divider_v"
            android:visibility="gone"/>

        <com.jmm.csg.widget.CenterRadioButton
            android:id="@+id/rb_mine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:button="@null"
            android:drawableLeft="@drawable/selector_tab_mine"
            android:drawablePadding="5dp"
            android:text="@string/mine"
            android:textColor="@color/tab_text_color"
            android:textSize="@dimen/text_16"/>

    </RadioGroup>


</LinearLayout>
