<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/icon_to_share"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/wechat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/icon_wechat"
            android:gravity="center"
            android:text="微信好友"
            android:textColor="@color/gray_66"
            android:textSize="@dimen/text_12"/>


        <TextView
            android:id="@+id/friendster"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/icon_friendster"
            android:gravity="center"
            android:text="朋友圈"
            android:textColor="@color/gray_66"
            android:textSize="@dimen/text_12"/>


        <TextView
            android:id="@+id/copylink"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/icon_copylink"
            android:gravity="center"
            android:text="复制链接"
            android:textColor="@color/gray_66"
            android:textSize="@dimen/text_12"
            android:visibility="visible"/>


        <TextView
            android:id="@+id/microblog"
            android:layout_width="0dp"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/icon_microblog"
            android:gravity="center"
            android:text="新浪微博"
            android:textColor="@color/gray_66"
            android:textSize="@dimen/text_12"/>


        <TextView
            android:id="@+id/qq"
            android:layout_width="0dp"
            android:visibility="invisible"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/icon_qq"
            android:gravity="center"
            android:text="QQ好友"
            android:textColor="@color/gray_66"
            android:textSize="@dimen/text_12"/>

        <TextView
            android:id="@+id/qzone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="gone"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/icon_qzone"
            android:gravity="center"
            android:text="QQ空间"
            android:textColor="@color/gray_66"
            android:textSize="@dimen/text_12"/>


    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">


        <!--<TextView-->
            <!--android:id="@+id/copylink"-->
            <!--android:layout_width="0dp"-->
            <!--android:visibility="invisible"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_weight="1"-->
            <!--android:drawablePadding="5dp"-->
            <!--android:drawableTop="@drawable/icon_copylink"-->
            <!--android:gravity="center"-->
            <!--android:text="复制链接"-->
            <!--android:textColor="@color/gray_66"-->
            <!--android:textSize="@dimen/text_12"/>-->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

    </LinearLayout>
    <!--<TextView-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="100dp"/>-->
    <View
        style="@style/divider_h"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="12dp"/>

    <TextView
        android:id="@+id/cancel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="取消"
        android:textColor="#de8071"
        android:textSize="19sp"/>

</LinearLayout>