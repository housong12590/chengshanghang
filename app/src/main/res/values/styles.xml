<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionSheetStyle">@style/ActionSheetStyleiOS7</item>
    </style>

    <style name="ActionSheetStyleiOS7">
        <item name="actionSheetBackground">@android:color/transparent</item>
        <item name="cancelButtonBackground">@drawable/actionsheet_single_normal</item>
        <item name="otherButtonTopBackground">@drawable/actionsheet_top_normal</item>
        <item name="otherButtonMiddleBackground">@drawable/actionsheet_middle_normal</item>
        <item name="otherButtonBottomBackground">@drawable/actionsheet_bottom_normal</item>
        <item name="otherButtonSingleBackground">@drawable/actionsheet_single_normal</item>
        <item name="cancelButtonTextColor">#000000</item>
        <item name="otherButtonTextColor">#000000</item>
        <item name="actionSheetPadding">0dp</item>
        <item name="otherButtonSpacing">0dp</item>
        <item name="cancelButtonMarginTop">5dp</item>
        <item name="actionSheetTextSize">20sp</item>
        <item name="actionHintTextSize">14sp</item>
    </style>

    <style name="divider_h">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/divider</item>
    </style>


    <style name="divider_v">
        <item name="android:layout_width">0.8dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/divider</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">@dimen/text_12</item>
    </style>

    <style name="TabLayoutTextStyle_2">
        <item name="android:textSize">@dimen/text_14</item>
    </style>

    <style name="comment_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="loading_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>


    <style name="btn_style">
        <item name="android:layout_width">74dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_14</item>
    </style>

    <style name="comment_dialog_animation" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/comment_dialog_enter</item>
        <item name="@android:windowExitAnimation">@anim/comment_dialog_exit</item>
    </style>

</resources>
